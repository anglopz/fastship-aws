# FastShip Backend - Local Development Environment Variables
# Copy this file to .env and update with your local values

# Application Settings
APP_NAME=FastShip
APP_DOMAIN=localhost:8000
FRONTEND_URL=http://localhost:5173

# Security
JWT_SECRET=your-secret-key-change-in-production-dev
JWT_ALGORITHM=HS256

# Database Configuration
# Option 1: Use DATABASE_URL (for Docker Compose)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/fastapi_db

# Option 2: Use individual POSTGRES_* variables (for local PostgreSQL)
# POSTGRES_SERVER=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=password
# POSTGRES_DB=fastapi_db

# Redis Configuration
# Option 1: Use REDIS_URL (for Docker Compose)
REDIS_URL=redis://localhost:6379

# Option 2: Use individual REDIS_* variables
# REDIS_HOST=localhost
# REDIS_PORT=6379

# Email Configuration (Mailtrap for local testing)
EMAIL_MODE=sandbox
MAILTRAP_USERNAME=your-mailtrap-username
MAILTRAP_PASSWORD=your-mailtrap-password
MAIL_FROM=noreply@fastship.local
MAIL_FROM_NAME=FastShip Dev

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174,http://127.0.0.1:3000,http://127.0.0.1:5173,http://127.0.0.1:5174

# Twilio (Optional - for SMS testing)
TWILIO_SID=
TWILIO_AUTH_TOKEN=
TWILIO_NUMBER=

# Logging
LOG_LEVEL=INFO
ENABLE_REQUEST_LOGGING=true
