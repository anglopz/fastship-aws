aws_region = "eu-west-1"

vpc_cidr            = "10.0.0.0/16"
public_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.11.0/24"]
availability_zones = ["eu-west-1a", "eu-west-1b"]

database_name = "fastship"
username      = "fastship"
db_password   = "change-me-secure-password"

redis_auth_token = "change-me-redis-token"

backend_image = "123456789012.dkr.ecr.eu-west-1.amazonaws.com/fastship-backend:latest"

instance_class       = "db.t3.micro"
rds_allocated_storage = 20

node_type           = "cache.t3.micro"
redis_num_cache_nodes = 1

api_task_cpu       = 512
api_task_memory    = 1024
api_desired_count  = 1
api_use_public_subnets = false

worker_task_cpu      = 256
worker_task_memory   = 512
worker_desired_count = 1

log_retention_days = 7

domain_name = ""

# ACM Certificate ARN for ALB (eu-west-1)
# Get from: aws acm list-certificates --region eu-west-1 --query 'CertificateSummaryList[?DomainName==`api.fastship-api.com`].CertificateArn' --output text
acm_certificate_arn = ""
